  <% end %>
  
  <div class="form-group row">
    <%= f.label :title, class: 'col-sm-2 form-control-label' %>
	<div class="col-sm-6">
	  <%= f.text_field :title, class: 'form-control' %>
	</div>
  </div>
  <div class="form-group row">
    <%= f.label :duration, class: 'col-sm-2 form-control-label' %>
	<div class="col-sm-6">
      <%= f.text_field :duration, class: 'form-control' %>
	</div>
  </div>
  <div class="form-group row">
    <%= f.label :director, class: 'col-sm-2 form-control-label' %>
	<div class="col-sm-6">
      <%= f.text_field :director, class: 'form-control' %>
	</div>
  </div>
  <div class="form-group row">
    <%= f.label :rating, class: 'col-sm-2 form-control-label' %>
	<div class="col-sm-6">
	  <%= f.text_field :rating, class: 'form-control' %>
	</div>
  </div>
  
    Poster <br/>
